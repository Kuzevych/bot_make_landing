{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "es5",
    "baseUrl": "src",
  },
  "include": [
    "index.tsx",
    "./**/*.ts",
    "./**/*.tx",
  ],
  "exclude": [
    "dist",
    "webpack",
    "./node_modules/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "webpack.config.js"
  ]
}